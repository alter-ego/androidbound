<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_margin="5dp"
             android:layout_height="wrap_content">

    <solutions.alterego.androidbound.support.android.ui.BindableRecyclerView
            android:id="@+id/main_nested_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            useParentLayoutParams="false"
            layoutManager="linear"
            layoutManagerOrientation="vertical"
            binding="{ItemsSource @= DataItems}; {TemplatesForObjects @- ObjectTemplates}"/>
</FrameLayout>